<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="startTestButton" Content="Начать тест" Click="StartTestButton_Click" Margin="10"/>
            <TextBlock x:Name="timerTextBlock" Margin="10" FontSize="16" Visibility="Collapsed"/>
            <TextBlock x:Name="questionTextBlock" Margin="10" FontSize="16" Visibility="Collapsed"/>
            <RadioButton x:Name="option1RadioButton" Content="" Margin="10" Visibility="Collapsed"/>
            <RadioButton x:Name="option2RadioButton" Content="" Margin="10" Visibility="Collapsed"/>
            <RadioButton x:Name="option3RadioButton" Content="" Margin="10" Visibility="Collapsed"/>
            <RadioButton x:Name="option4RadioButton" Content="" Margin="10" Visibility="Collapsed"/>
            <Button x:Name="nextButton" Content="Далее" Click="NextButton_Click" Margin="10" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
