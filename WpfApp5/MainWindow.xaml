<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест по теме Типы данных" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="questionTextBlock" FontWeight="Bold" FontSize="16" Margin="0,10"/>
            <RadioButton x:Name="option1RadioButton" Content="Вариант 1" Margin="0,5" Checked="OptionRadioButton_Checked"/>
            <RadioButton x:Name="option2RadioButton" Content="Вариант 2" Margin="0,5" Checked="OptionRadioButton_Checked"/>
            <RadioButton x:Name="option3RadioButton" Content="Вариант 3" Margin="0,5" Checked="OptionRadioButton_Checked"/>
            <RadioButton x:Name="option4RadioButton" Content="Вариант 4" Margin="0,5" Checked="OptionRadioButton_Checked"/>
            <TextBlock x:Name="timerTextBlock" FontSize="16" FontWeight="Bold" Visibility="Collapsed" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
